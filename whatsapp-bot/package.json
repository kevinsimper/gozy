  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "npm run typecheck && vitest run",
    "format": "prettier --write \"src/**/*.ts\""
