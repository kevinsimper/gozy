    "bot"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hono/node-server": "^1.19.6",
    "dotenv": "^17.2.3",
    "hono": "^4.10.5",
    "qrcode-terminal": "0.12.0",
    "whatsapp-web.js": "1.33.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^20.17.10",
    "@types/qrcode-terminal": "^0.12.2",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3",
    "vitest": "^3.0.9"
  }
}
