{
  "name": "gozy",
  "version": "1.0.0",
  "description": "WhatsApp-based platform for Copenhagen taxi drivers",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --minify --env production",
    "test": "npm run test:types && npm run test:unit",
    "test:types": "tsc --noEmit",
    "test:unit": "vitest run",
    "format": "prettier --write --cache --log-level=warn .",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply DB --local",
    "db:migrate:remote": "wrangler d1 migrations apply DB --remote",
    "db:studio": "drizzle-kit studio"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kevinsimper/gozy.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kevinsimper/gozy/issues"
  },
  "homepage": "https://github.com/kevinsimper/gozy#readme",
  "dependencies": {
    "@google/genai": "^1.28.0",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.10.4",
    "nanoid": "^5.1.6",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.8.11",
    "@cloudflare/workers-types": "^4.20250405.0",
    "drizzle-kit": "^0.31.6",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "vitest": "^3.0.9",
    "wrangler": "^4.44.0"
  }
}
